<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


	<bean id="spellChecker" class="com.ibm.spring.beans.SpellChecker" scope="singleton" >
		<property name="id" value="1" />
	</bean>
	
		<bean id="textEditor" class="com.ibm.spring.beans.TextEditor" autowire="constructor" init-method="init" destroy-method="destroy">
		<!--<property name="spellChecker" ref="spellChecker"></property>-->
			<constructor-arg ref="spellChecker"></constructor-arg>
	</bean>

</beans>